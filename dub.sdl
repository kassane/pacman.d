libs "sokol"
libs "X11" "Xcursor" "Xi" "GL" "asound" platform="linux"
lflags "-lObjC" "-all_load" "-framework" "Cocoa" "-framework" "QuartzCore" "-framework" "Foundation" "-framework" "MetalKit" "-framework" "Metal" "-framework" "AudioToolbox" platform="osx"
